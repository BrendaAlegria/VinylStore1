<%- include ("../templates/encaInici")%>
<% if (tipo === 'admin') { %>
  <%- include ("../templates/menuUsuarios")%>
<% } else { %>
  <%- include ("../templates/menuAdmin")%>
<% } %>
<header>
    <h1>Usuarios</h1>
</header>
 <div class="container" mt-77>
    <div class="card">
        <div class="car-header">
        </div>
        <div class="car-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th><center>Id</center></th>
                        <th><center>Nombre</center></th>
                        <th><center>Usuario</center></th>
                        <th><center>Password</center></th>
                        <th><center>Foto</center></th>
                        <th><center>Editar / Borrar</center> </th>
                    </tr>
                </thead>
                <tbody> 
                    <%
                    usuarios.forEach((usuario)=>{
                    %>
                    <tr>
                        <td><center><%= usuario.id %></center></td>
                        <td><center><%= usuario.nombre %></center></td>
                        <td><center><%= usuario.usuario %></center></td>
                        <td><center>*********</center></td>
                        <td><center><img src="/images/<%= usuario.foto %>" width="150px" height="auto"></center></td>
                        <td><center>
                            <a href="/editar/<%= usuario.id %>">Editar</a>
                            <a href="/borrar/<%= usuario.id %>">Borrar</a>
                        </center>
                        </td>
                    </tr>
                    <%
                    });
                    %>
                </tbody>
            </table>
        </div>
        <div class="car-footer"></div>
    </div>
 </div>
<%- include ("../templates/pie")%>